    <script>


        var arr = [];

        for(i = 0; i < 6; i++)
        {
            arr[i] = Number(prompt(`Enter number: ` + (i+1)));
        }


        console.log(arr);


        var small = arr[0];
        var big = arr[0];
        var sum = 0;
        
        for (var i = 0; i < arr.length; i++)
        {
            if (arr[i] < small)
                small = arr[i];

            if (arr[i] > big )
                big = arr[i];

             sum += arr[i];  


        }  

        console.log("The smallest number is:", small);
        console.log("The bigest number is:", big);
        console.log("The sum of the numbers is:", sum);
        



        var arrOdd = [];
        var arrEven = [];

        for (var j = 0; j < arr.length; j++){
            if (arr[j] % 2 == 0)
            arrOdd[j] = arr[j];

            else {
                arrEven[j] = arr[j];
            }
        }
            console.log(arrOdd);
            console.log(arrEven);



        var bignum = arr[0];
        var secnum = arr[0];

        for (i = 0; i < arr.length; i++)  
         {
            if (arr[i] >= bignum) {
                secnum = bignum;
                bignum = arr[i];
            }

            else if (arr[i] < bignum && arr [i] > secnum)
                secnum  = arr[i];    
         } 

         console.log("The secong bigest number is:", secnum);






    </script>
    
